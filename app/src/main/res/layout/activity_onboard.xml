<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardActivity"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/lang_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/lang_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/urde"
                android:padding="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="مرحبا بك في تطبيق قرار اليوم\n هذا التطبيق صمم خصيصا لك\n كن مستعدا لاستقبال 3 رسائل يوميا\n لا تنسي ان تكتشف رسائلك يوميا"
                android:fontFamily="@font/cas"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RippleStyleWhite"
            >

            <Button
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="التالي"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:onClick="next"
                android:fontFamily="@font/cas"
                />

        </com.balysv.materialripple.MaterialRippleLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>